{
  "name": "infra_less",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "description": "Production-ready site deployment service",
  "author": "Aditya",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop site-deployer",
    "pm2:restart": "pm2 restart site-deployer",
    "pm2:logs": "pm2 logs site-deployer",
    "docker:build": "docker build -t site-deployer .",
    "docker:run": "docker run -p 3000:3000 site-deployer",
    "health-check": "node scripts/health-check.js",
    "test:logging": "node scripts/test-logging.js"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "chalk": "^5.4.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "simple-git": "^3.28.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "deployment",
    "react",
    "vue",
    "angular",
    "aws",
    "s3",
    "cloudfront",
    "ci/cd"
  ]
}
